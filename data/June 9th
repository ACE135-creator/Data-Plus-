race_population_homeless <- data.frame(
  Race = c("Caucasian", "African American", "Hispanic", "Other"),
  population = c(2710, 2047, 64, 58))
  #these numbers came from above commented out section 

# Summarize death counts and join PEH race population
rate_Race_homeless_data <- filtered_Only_homeless_Race %>%
  group_by(grouped_deaths, Race) %>%
  summarise(count = n(), .groups = "drop") %>%
  left_join(race_population_homeless, by = "Race") %>%
  mutate(rate = (count / population) * 1000)

rate_Race_homeless_data <- rate_Race_homeless_data %>%
  group_by(grouped_deaths) %>%
  mutate(total_rate = sum(rate)) %>%
  ungroup() %>%
  mutate(grouped_deaths = fct_reorder(grouped_deaths, total_rate))


# Plot the rates
ggplot(rate_Race_homeless_data, aes(x = grouped_deaths, y = rate, fill = Race)) +
  geom_bar(stat = "identity") +
  scale_fill_manual(values = c(
    "Caucasian" = "skyblue",
    "African American" = "royalblue",
    "Hispanic" = "slategray",
    "Other" = "black"
  )) +
  labs(
    title = "Cause of Death by Race for PEH (Rate per 1,000 People)",
    x = "Cause of Death",
    y = "Rate per 1,000 People"
  ) +
  coord_flip() +
  scale_y_continuous(expand = expansion(mult = c(0, 0.1))) +
  theme_minimal() +
  theme(
    plot.title = element_text(hjust = 0.5),
    axis.text.x = element_text(angle = 0)) +
    theme(axis.text.x = element_text(angle = 0))  +
    theme(plot.title = element_text(hjust = .5, size = 20, face = "bold")) +
    theme(axis.title = element_text(size = 18)) +
    theme(axis.text.x = element_text(size = 14)) +
    theme(axis.text.y = element_text(size = 14)) +
    theme(plot.margin = margin(20, 20, 20, 20))

