# Sex All Deaths General Pop % --------------------------------------------

percent_Sex_data <- PEH_combined_Alphabet2 %>%
  group_by(grouped_deaths, l_person_sex_fct) %>%
  summarise(count = n(), .groups = "drop") %>%
  group_by(grouped_deaths) %>%
  mutate(percentage = 100 * count / sum(count)) %>%
  ungroup()


