  geom_bar(stat = "identity") +
  scale_fill_manual(values = c(
    "Female" = "skyblue",
    "Male" = "royalblue"
  )) +
  labs(title = "Cause of Death by Sex (Percentage)", x = "Cause of Death",
    y = "Percentage of People") +
  coord_flip() +
  theme_minimal() +
  theme(plot.title = element_text(hjust = 0.5),
    axis.text.x = element_text(angle = 0)) +
  geom_text(aes(label = ifelse(percentage > 10, paste0(round(percentage, 1), "%"), "")),
            position = position_stack(vjust = 0.5),
            color = "white",
            size = 4)

# Sex All Deaths General Pop Rate  ----------------------------------------------------
library(dplyr)
library(ggplot2)

sex_population_general <- data.frame(
  Sex = c("Female", "Male"),
  population = c(5644518, 5401505)
)  #these numbers came from https://www.census.gov/quickfacts/fact/table/NC/NES010223 


# Compute death rate per 1,000,000 people by cause of death and sex
rate_Sex_data <- PEH_combined_Alphabet2 %>%
  rename(Sex = l_person_sex_fct) %>%  # Rename for joining
  group_by(grouped_deaths, Sex) %>%
  summarise(count = n(), .groups = "drop") %>%
  left_join(sex_population_general, by = "Sex") %>%
  mutate(rate = (count / population) * 1000000)

# Plot
ggplot(rate_Sex_data, aes(x = grouped_deaths, y = rate, fill = Sex)) +
  geom_bar(stat = "identity") +
  scale_fill_manual(values = c(
    "Female" = "skyblue",
    "Male" = "royalblue"
  )) +
  labs(
    title = "Cause of Death by Sex (Rate per 1,000,000 People)",
    x = "Cause of Death",
    y = "Rate per 1,000,000 People"
  ) +
  coord_flip() +
  theme_minimal(base_size = 14) +
  theme(
    plot.title = element_text(hjust = 0.5, size = 18, face = "bold"),
    axis.text.x = element_text(size = 12),
    axis.text.y = element_text(size = 12),
    legend.title = element_text(size = 14),
    legend.text = element_text(size = 12)
  )

# Age All Deaths General Pop ---------------------------------------------------------------------
PEH_combined_Alphabet_Age <- PEH_combined_Alphabet2 %>%
  mutate(Age = case_when(
    l_person_age_num %in% 0:19 ~ "0-19",
    l_person_age_num %in% 20:39 ~ "20-39", 
    l_person_age_num %in% 40:59 ~ "40-59",
    l_person_age_num %in% 60:79 ~ "60-79",
    l_person_age_num %in% 80:120 ~ "80+",
    TRUE ~ "Other"))

ggplot(PEH_combined_Alphabet_Age, aes(x = grouped_deaths, fill = Age)) +
  geom_bar(position = "stack") +
  scale_fill_manual(values = c(
    "0-19" = "paleturquoise",
    "20-39" = "skyblue",
    "40-59" = "steelblue",
    "60-79" = "royalblue",
    "80+" = "navy",
    "Other" = "slategray"
  )) +
  labs(title = "Cause of Death by Age", x = "Cause", y = "Number of People") +
  coord_flip() + 
  theme_minimal() +
  theme(plot.title = element_text(hjust = .5)) +
  theme(axis.text.x = element_text(angle = 0))


# Age All Deaths General % ------------------------------------------------
percent_Age_data <- PEH_combined_Alphabet_Age %>%
  group_by(grouped_deaths, Age) %>%
  summarise(count = n(), .groups = "drop") %>%
  group_by(grouped_deaths) %>%
  mutate(percentage = 100 * count / sum(count)) %>%
  ungroup()


ggplot(percent_Age_data, aes(x = grouped_deaths, y = percentage, fill = Age)) +
  geom_bar(stat = "identity") +
  scale_fill_manual(values = c(
    "0-19" = "paleturquoise",
    "20-39" = "skyblue",
    "40-59" = "steelblue",
    "60-79" = "royalblue",
    "80+" = "navy",
    "Other" = "slategray"
  )) +
  labs(title = "Cause of Death by Age (Percentage)", x = "Cause of Death",
       y = "Percentage of People") +
  coord_flip() +
  theme_minimal() +
  theme(plot.title = element_text(hjust = 0.5),
        axis.text.x = element_text(angle = 0)) +
  geom_text(aes(label = ifelse(percentage > 2, paste0(round(percentage, 1), "%"), "")),
            position = position_stack(vjust = 0.5),
            color = "white",
            size = 4)

# Finding PEH -------------------------------------------------------------

PEH_combined_Alphabet2_homeless <- PEH_data %>%
  mutate(grouped_deaths = case_when(
    (str_starts(acmecod, "A") | str_starts(acmecod, "B")) ~ "Infectious Diseases",
    (str_starts(acmecod, "C") | str_starts(acmecod, "D0") | str_starts(acmecod, "D1")
     | str_starts(acmecod, "D2") | str_starts(acmecod, "D3") | str_starts(acmecod, "D4")) ~ "Cancer",
    (str_starts(acmecod, "D5") | str_starts(acmecod, "D6") | str_starts(acmecod, "D7") 
