    (str_starts(acmecod, "P")) ~ "Perinatal Conditions",
    (str_starts(acmecod, "Q")) ~ "Congenital Malformations",
    (str_starts(acmecod, "R") | str_starts(acmecod, "X5")
    | str_starts(acmecod, "Z") | str_starts(acmecod, "T9") ) ~ "Unknown", 
