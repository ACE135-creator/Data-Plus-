# Finding Rates -----------------------------------------------------------

#numbers came from Finding PEH
PEH_pop_total <- 4879
general_pop_total <- 664726

rates_df <- PEH_homeless %>%
  group_by(grouped_deaths, Population_Breakdown) %>%
  summarise(deaths = n(), .groups = "drop") %>%
  mutate(rate = case_when(
    Population_Breakdown == "PEH" ~ deaths / PEH_pop_total * 1000,
    Population_Breakdown == "General Population" ~ deaths / general_pop_total * 1000
  ))
  
# All Deaths Homeless Vs Housed with Rate --------------------------------------------

rates_df <- rates_df %>%
  mutate(grouped_deaths = reorder(grouped_deaths, rate))

ggplot(rates_df, aes(x = grouped_deaths, y=rate, fill = Population_Breakdown)) +
  geom_bar(stat = "identity", position = "dodge") +
  scale_fill_manual(values = c(
    "PEH" = "royalblue",
    "General Population" = "skyblue"
  )) +
  labs(title = "Cause of Death in General Population vs PEH", x = "Cause", 
       y = "Rate of Death Per 1000 People") +
  coord_flip() + 
  theme_minimal() +
  theme(plot.title = element_text(hjust = .5)) +
  theme(axis.text.x = element_text(angle = 0)) +
  geom_text(aes(label = round(rate, 2)), hjust = -.1, position = position_dodge(width = 0.9))

# All Deaths Homeless Vs Housed with Percentages -------------------------------------

count_df <- PEH_combined_Alphabet2_homeless %>%
  mutate(Population_Breakdown = case_when(
    linked_hmis_linkstatus == "Death-HMIS Linked" ~ "PEH",
    TRUE ~ "General Population"
  )) %>%
  group_by(grouped_deaths, Population_Breakdown) %>%
  summarise(count = n(), .groups = "drop")

percent_df <- count_df %>%
  group_by(Population_Breakdown) %>%
  mutate(percentage = 100 * count / sum(count)) %>%
  ungroup()

library(forcats)

percent_df <- percent_df %>%
  mutate(grouped_deaths = fct_reorder(grouped_deaths, percentage, .fun = sum))

ggplot(percent_df, aes(x = grouped_deaths, y = percentage, fill = Population_Breakdown)) +
  geom_bar(stat = "identity", position = "dodge") +
  scale_fill_manual(values = c(
    "PEH" = "royalblue",
    "General Population" = "skyblue"
  )) +
  labs(title = "Cause of Death in General Population vs PEH", x = "Cause",
       y = "Percentage of Deaths") +
  coord_flip() +
  theme_minimal() +
  scale_y_continuous(expand = expansion(mult = c(0, 0.1))) +
  theme(plot.title = element_text(hjust = .5, size = 20)) +
  theme(axis.text.x = element_text(angle = 0)) +
  theme(axis.title = element_text(size = 18)) +
  theme(axis.text.x = element_text(size = 14)) +
  theme(axis.text.y = element_text(size = 14)) +
  theme(plot.margin = margin(20, 20, 20, 20)) +
  theme(legend.text = element_text(size = 14)) +
  theme(legend.title = element_text(size = 16)) +
  geom_text(aes(label = paste0(round(percentage, 1), "%")), hjust = -.1, size = 5,
            position = position_dodge(width = 0.9)) 


